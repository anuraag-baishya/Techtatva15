<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/fillableLoader"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:fl_originalWidth="512"
        app:fl_originalHeight="512"
        app:fl_strokeColor="@color/primary"
        app:fl_fillColor="@color/primary"
        app:fl_strokeWidth="2dp"
        app:fl_strokeDrawingDuration="1500"
        app:fl_fillDuration="1500"
        app:fl_clippingTransform="waves"
        />
</RelativeLayout>