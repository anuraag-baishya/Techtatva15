<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="chipset.techtatva.activities.AboutUsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways"/>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="3dp"
        android:layout_below="@+id/toolbar"
        app:cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/about_cardview"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">
        <TextView
            android:layout_below="@id/toolbar"
            android:id="@+id/aboutTT"
            android:text="@string/hello_world"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/about_cardview"
        app:cardElevation="3dp"
        android:layout_marginTop="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/drawer_header"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_below="@id/aboutTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fb_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_facebook"/>
            <ImageView
                android:id="@+id/insta_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_instagram"/>
            <ImageView
                android:id="@+id/twitter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_twitter"/>
            <ImageView
                android:id="@+id/gplus_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_gplus"/>
            <ImageView
                android:id="@+id/youtube_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_youtube"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</ScrollView>